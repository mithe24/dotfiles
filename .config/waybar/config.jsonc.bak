{
    "layer": "top",
    "spacing": 0,
    "height": 0,

    "margin-top": 0,
    "margin-right": 0,
    "margin-bottom": 1,
    "margin-left": 0,

    "modules-left": [
        "hyprland/workspaces"
    ],

    "modules-center": [
        "clock"
    ],

    "modules-right": [
        "custom/network_limited",
        "battery#bat0",
        "battery#bat1",
        "pulseaudio"
    ],

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "tooltip": false
    },

    "clock": {
        "interval": 5,
        "format": "{:%H:%M - %a, %d %b}",
        "tooltip": false
    },

    "battery#bat0": {
        "bat": "BAT0",
        "format": "{capacity}% {icon}",
        "format-charging": "⚡{capacity}%",
        "format-plugged": "🔌{capacity}%",
        "format-icons": ["", "", "", "", ""]
    },

    "battery#bat1": {
        "bat": "BAT1",
        "format": "{capacity}% {icon}",
        "format-charging": "⚡ {capacity}%",
        "format-plugged": "🔌 {capacity}%",
        "format-full": "🟢 {capacity}%",
        "format-icons": ["", "", "", "", ""]
    },

    "pulseaudio": {
        "scroll-step": 5,
        "max-volume": 150,
        "format": "vol {volume}%",
        "format-muted": "muted",
        "nospacing": 1,
        "on-click": "pavucontrol",
        "tooltip": false
    },

    "custom/network_limited": {
        "exec": "/home/mithe/.config/waybar/scripts/network_speed_limited.sh",
        "interval": 1,
        "return-type": "json",
        "tooltip": false
    }
}
