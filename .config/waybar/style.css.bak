/* General Bar Styling */
#waybar {
    background: #282727; /* Main background */
    color: #BBBBBB; /* Foreground color */
    padding: 5px 10px;
    font-size: 14px;
    font-family: "firecode nerd font";
    border-radius: 0;
    margin: 0;
}

/* Module Styling */
#waybar .module {
    padding: 4px 10px;
    margin-right: 10px;
    border-radius: 5px;
    color: #BBBBBB; /* Default text color */
}

#waybar .module:hover {
    background: rgba(255, 255, 255, 0.1);
}

/* Workspaces Module */
#workspaces {
    background: transparent;
}

#workspaces button {
    color: #BBBBBB;
    background: transparent;
    padding: 5px 10px;
    border-radius: 5px;
    font-weight: 600;
    margin-right: 5px;
}

/* Persistent before empty */
#workspaces button.persistent {
    opacity: 0.7;
}

/* Empty workspace (not active, not visible) */
#workspaces button.empty {
    opacity: 0.4;
}

/* Hosting monitor (local monitor workspaces) */
#workspaces button.hosting-monitor {
    border: 1px solid #444;
}

/* Active workspace */
#workspaces button.active {
    background-color: #8AA4B0;
    color: #282727;
}

/* Visible workspace but not focused */
#workspaces button.visible {
    background-color: #565E4D;
    color: #FFFFFF;
}

/* Urgent workspace (flashing apps) */
#workspaces button.urgent {
    background-color: #84514D;
    color: white;
    font-weight: bold;
}

/* Special workspace (used by things like scratchpads) */
#workspaces button.special {
    background-color: #181616;
    color: #8AA4B0;
}

/* Clock */
#clock {
    color: #BBBBBB;
}

/* Battery Module */
#battery.bat0, #battery#bat1 {
    color: #BBBBBB;
}

#battery.bat0 .icon, #battery#bat1 .icon {
    margin-right: 5px;
}

#battery.bat0 .charging, #battery#bat1 .charging {
    color: #8AA4B0; /* Blue for charging */
}

#battery.bat0 .plugged, #battery#bat1 .plugged {
    color: #565E4D; /* Green for plugged */
}

/* PulseAudio Module */
#pulseaudio {
    color: #BBBBBB;
}

#pulseaudio.muted {
    color: #84514D;
}

/* Custom Network Module */
#custom-network_limited {
    padding: 5px 10px;
    margin-right: 10px;
    background: #181616; /* Dark background for network */
    border-radius: 5px;
    color: #BBBBBB;
}

#custom-network_limited .icon {
    margin-right: 8px;
    font-size: 16px;
}

#custom-network_limited .text {
    font-size: 14px;
}

#custom-network_limited .signal {
    font-size: 14px;
    color: #565E4D; /* Green for signal strength */
}

#custom-network_limited .critical {
    color: #84514D; /* Red for critical status */
}

#custom-network_limited .disconnected {
    color: #84514D; /* Red for disconnected */
}

#custom-network_limited .connected {
    color: #8AA4B0; /* Blue for connected */
}

#custom-network_limited:hover {
    background: rgba(255, 255, 255, 0.1);
}

/* Tooltip Styling */
.tooltip {
    background: #282727;
    color: #BBBBBB;
    font-size: 12px;
    padding: 5px;
    border-radius: 5px;
}

/* Accent Styling */
#waybar .module.battery, #waybar .module.pulseaudio {
    background-color: #84514D; /* Red accent for battery and audio modules */
}

#waybar .module.network {
    background-color: #8AA4B0; /* Blue accent for network module */
}

#waybar .module.clock {
    background-color: #565E4D; /* Green accent for clock */
}

/* Focused Workspaces */
#hyprland-workspaces .workspace.focused {
    background: #8AA4B0; /* Blue for active workspace */
    color: #BBBBBB;
}

